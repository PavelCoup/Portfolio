body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
}

.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.bootcamp-link {
  font-size: 48px;
  font-weight: bold;
  text-decoration: none;
  color: #bdc3c7;
  background: linear-gradient(to right, #95a5a6, #7f8c8d, #95a5a6);
  background-size: 200% auto;
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  animation: pulseAnimation 1s steps(8) infinite;
}

@keyframes pulseAnimation {
  0%, 70%, 100% { transform: scale(1); }
  20%, 50% { transform: scale(1.1); }
  25%, 45% { transform: scale(0.9); }
}

.popup-container {
  display: none;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  padding: 20px;
  border-radius: 4px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  z-index: 999;
}

.close-button {
  position: absolute;
  top: 5px;
  right: 10px;
  font-size: 16px;
  cursor: pointer;
  background: none;
  border: none;
  color: #666;
}

.popup-container.show {
  display: block;
}

/* Additional styles for instructions */
p {
  margin-bottom: 20px;
}

pre {
  background-color: #f0f0f0;
  padding: 8px;
  border-radius: 4px;
  font-family: Consolas, monospace;
  margin-bottom: 20px;
}

h2, h3 {
  margin-bottom: 10px;
}

a {
  color: #428bca;
}
